
import java.awt.Dimension;
import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextPane;

import Process.LibrarySystem;

public class MyLendOneBookPanel extends JPanel
{
	public MyLendOneBookPanel(JFrame newFrame, LibrarySystem ourLib)
	{
		this.setSize(400, 430);

		JLabel mainLabel = new JLabel("1팀 도서관 대출 페이지 입니다.");
		Font myFont = new Font("Serif", Font.BOLD, 20);
		mainLabel.setFont(myFont);

		
		JLabel blank = new JLabel("대출자의 이름을 입력하세요.");
		blank.setPreferredSize(new Dimension(0, 50));
		
		JLabel borrowerTextLabel = new JLabel("대출자의 이름을 입력하세요.");
		borrowerTextLabel.setFont(new Font("Serif", Font.BOLD, 15));
		borrowerTextLabel.setAlignmentY(BOTTOM_ALIGNMENT);
		
		
		JTextPane borrowerTextPane = new JTextPane();
		borrowerTextPane.setPreferredSize(new Dimension(350, 50));
		borrowerTextPane.setFont(myFont);
		borrowerTextPane.addMouseListener(new MouseAdapter()
		{
			@Override
			public void mouseClicked(MouseEvent e)
			{
			}
		});

		JLabel bookTextLabel = new JLabel("대출을 원하는 책의 카탈로그 번호를 입력하세요.");
		bookTextLabel.setFont(new Font("Serif", Font.BOLD, 15));
		
		JTextPane bookTextPane = new JTextPane();
		bookTextPane.setPreferredSize(new Dimension(350, 50));
		Font lendFont = new Font("Serif",Font.BOLD,15);
		bookTextPane.setFont(lendFont);
		bookTextPane.addMouseListener(new MouseAdapter()
		{
			@Override
			public void mouseClicked(MouseEvent e)
			{
			}
		});

		JButton okeyBtn = new JButton("확인");
		okeyBtn.addActionListener(new ActionListener()
		{

			@Override
			public void actionPerformed(ActionEvent e)
			{
				String borrower = borrowerTextPane.getSelectedText();
				String book = bookTextPane.getSelectedText();

				newFrame.dispose();
			}
		});

		JButton cancleBtn = new JButton("취소");
		cancleBtn.addActionListener(new ActionListener()
		{

			@Override
			public void actionPerformed(ActionEvent e)
			{
				newFrame.dispose();
			}
		});

		this.add(mainLabel);
		this.add(blank);
		this.add(borrowerTextLabel);
		this.add(borrowerTextPane);
		this.add(bookTextLabel);
		this.add(bookTextPane);
		this.add(okeyBtn);
		this.add(cancleBtn);

	}

}
