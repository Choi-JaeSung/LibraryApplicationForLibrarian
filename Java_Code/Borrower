
public class Borrower {
	private String name;
	private Book book;
	
	public Borrower(String name){
		this.name = name;
	}
	public String getName() {
		return name;
	}
	public Book getBook() {
		return book;
	}
	public void setBook(Book book) {
		this.book = book;
	}
	
	public void detachBook(){
		book = null;
	}
	public void attachBook(Book book){
		this.book = book;
	}

}
