package GUI;

import java.awt.Dimension;
import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class MyAddOneBookPanel extends JPanel
{
	public MyAddOneBookPanel(JFrame newFrame, LibrarySystem ourLib)
	{
		JLabel mainlabel,title, author, cataNum;
		JTextField titleT,authorT,cataNumT;
		JButton button;
	    
	    mainlabel = new JLabel("Please fill in this form.");
	    Font myFont = new Font("Serif",Font.BOLD,20);
		mainlabel.setFont(myFont);
	    
	    title = new JLabel("Title:");
	    title.setPreferredSize(new Dimension(200, 100));
	    titleT = new JTextField("",15);
	    Font myFont1 = new Font("Serif",Font.BOLD,20);
		title.setFont(myFont1);
	    
	    author = new JLabel("Author:");	
	    author.setPreferredSize(new Dimension(200, 100));
	    authorT = new JTextField("",15);
	    Font myFont2 = new Font("Serif",Font.BOLD,20);
		author.setFont(myFont2);
	    
	   
	    
	    
	    button = new JButton("register");
	    
	    this.add(mainlabel);
	    this.add(title);
	    this.add(titleT);
	    this.add(author);
	    this.add(authorT);
	   
	    this.add(button);
	    
		button.addActionListener(new ActionListener()
		{
			
			@Override
			public void actionPerformed(ActionEvent e)
			{
				newFrame.dispose();
			}
		});
	}

}
