import java.util.Scanner;

public class LibraryApplication {
	public static void OpenLibrary(){
		Scanner scan = new Scanner(System.in);
//		System.out.print("Input Name of your LibrarySystem : ");
//		String LibraryName = scan.nextLine();
//		LibrarySystem library = new LibrarySystem(LibraryName);
		LibrarySystem library = new LibrarySystem("SH Library");
		int choice = 0;
		while(true){
			System.out.println("...<<" + library.getName() + ">>");
			System.out.println("...(1.registerOneBorrower)");
			System.out.println("...(2.addOneBook)");
			System.out.println("...(3.displayBooksAvailableForLoan)");
			System.out.println("...(4.displayBooksOnLoan)");
			System.out.println("...(5.lendOneBook)");
			System.out.println("...(6.returnOneBook)");
			System.out.println("...(7.Exit)");
			
			System.out.print("What are you going to do? : ");
			choice = scan.nextInt();
			if(choice == 1){
				System.out.print("Input borrowerName : ");
				String borrowerInformation = scan.next();
				library.registerOneBorrower(borrowerInformation);
			} 	
			else if(choice == 2){
				System.out.println("<Input bookProperty>");
				System.out.print("Input bookTitle : ");
				String bookTitle = scan.next();
				System.out.print("Input bookAuthor(divide by comma) : ");
				String bookAuthor = scan.next();
				String[] bookAuthor_ = bookAuthor.split(",");
				System.out.println("Input bookCatalogNumber : ");
				int catalogNumber = scan.nextInt();
				library.addOneBook(bookTitle, bookAuthor_, catalogNumber);
			}
			else if(choice == 3){
				library.displaybooksAvailableForLoan();
			}
			else if(choice == 4){
				library.displaybooksOnLoan();
			}
			else if(choice == 5){
				System.out.println("Input borrowerName : ");
				String borrowerName = scan.next();
				System.out.println("Input bookCatalogNumber : ");
				int catalogNumber = scan.nextInt();
				library.lendOneBook(borrowerName, catalogNumber);
			}
			else if(choice == 6){
				System.out.println("Input bookCatalogNumber : ");
				int catalogNumber = scan.nextInt();
				library.returnOneBook(catalogNumber);
			}
			else if(choice == 7){
				break;
			}
			else{
				System.out.println("\ninput Error!! Please re-enter.\n");
			}
		}
		
	}
	
	public static void main(String args[]){
		OpenLibrary();
	}
}
